            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:elevation="1dp"


                android:id="@+id/layout_changeapssword"

                card:elevation="1dp"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:background="@android:color/transparent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:src="@drawable/ic_password"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="8dp"

                        android:id="@+id/imagepassword"

                        android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="match_parent"
                    android:text="change password"
                    android:layout_toRightOf="@+id/imagepassword"
                    android:id="@+id/textView_change_password"
                    android:textAllCaps="true"
                    android:layout_centerVertical="true"
                    android:background="@android:color/transparent"
                    android:textSize="15dp"
                    android:layout_marginBottom="10dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:textColor="@color/colorBlack"
                    android:layout_height="50dp" />

                </RelativeLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:elevation="1dp"
                android:layout_marginTop="1dp"

                android:background="@color/grey"
                android:id="@+id/layout_cancel_all_reminders"
                card:elevation="1dp"
                android:layout_below="@+id/layout_changeapssword"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="8dp"
                        android:id="@+id/imagecancelReminder"
                        android:src="@drawable/ic_cancel_reminder"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="Cancel All Reminders"
                        android:layout_toRightOf="@+id/imagecancelReminder"
                        android:textAllCaps="true"
                        android:textSize="15dp"
                        android:id="@+id/textViewCancelAllReminders"
                        android:gravity="center_vertical"
                        android:layout_centerVertical="true"
                        android:paddingLeft="10dp"
                        android:layout_marginBottom="10dp"
                        android:textColor="@color/colorBlack"
                        android:layout_height="50dp" />
                    <android.support.v7.widget.SwitchCompat
                        android:layout_width="40dp"
                        android:layout_toRightOf="@+id/textViewCancelAllReminders"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:id="@+id/switch_cancel_all"
                        android:layout_marginRight="20dp"
                        android:layout_height="wrap_content" />
                </RelativeLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:elevation="1dp"
                android:layout_marginTop="1dp"

                android:background="@color/grey"
                card:elevation="1dp"
                android:id="@+id/layout_Alarm_settings"
                android:layout_below="@+id/layout_cancel_all_reminders"
