                    android:layout_marginBottom="10dp"
                    android:layout_toRightOf="@+id/imagereset"
                    android:textAllCaps="true"
                    android:textSize="15dp"
                    android:id="@+id/textView_Reset"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:textColor="@color/colorBlack"
                    android:layout_height="50dp" />

            </RelativeLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"


                android:background="@color/grey"
                android:layout_marginTop="1sp"

                 android:id="@+id/layout_setsleeptime"
                android:layout_below="@+id/layout_delete_All_Reminders"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:src="@drawable/ic_sleep_time"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="8dp"

                        android:id="@+id/imagesleep"

                        android:layout_height="wrap_content" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:weightSum="2"
                    android:layout_toRightOf="@+id/imagesleep"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:text="Set Sleep time"
                        android:textAllCaps="true"
                        android:textSize="15dp"
                        android:id="@+id/textView_Set_sleep_time"
                        android:gravity="center_vertical"
                        android:paddingLeft="10dp"
                        android:textColor="@color/colorBlack"
                        android:layout_height="50dp" />
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:layout_height="wrap_content">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:text=": Default"
                        android:textAllCaps="true"
                        android:textSize="15dp"
                        android:layout_marginBottom="10dp"
                        android:id="@+id/textView_Set_sleep_default"
                        android:gravity="center_vertical"
                        android:paddingLeft="10dp"
                        android:textColor="@color/colorBlack"
                        android:layout_height="50dp" />

                    </RelativeLayout>
