                        android:text="18_10 2016"
                        android:textColor="@android:color/black"
                        android:gravity="center"
                        android:paddingTop="2dp"
                        android:id="@+id/medicinereminderinterval"
                        android:layout_height="wrap_content" />
                </LinearLayout>

