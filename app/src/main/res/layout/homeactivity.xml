                <!--android:layout_width="match_parent"-->
                <!--android:gravity="center"-->
                <!--android:layout_marginTop="10dp"-->
                <!--android:background="@drawable/rectangle5"-->
                <!--android:layout_height="40dp"-->
                <!--android:id="@+id/layout_settings"-->
